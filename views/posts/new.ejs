<!-- views/posts/index.ejs -->
<!DOCTYPE html>
<html>
  <% include ../partials/head %>
  <body>
    <% include ../partials/header %>
    <div class="posts">
    <% include partials/top %>

      <!-- main start-->
      <div class="new">
        <h3>New Post</h3>
        <form class="posts_form" action="/posts/" method="post">
          <label>Title</label>
          <input type="text" name="post[title]" value="">
          <label>Body</label>
          <textarea name="post[body]" rows="8" cols="40"></textarea>
          <div class="float_right">Auther : <%= user.nickname %></div>
          <button type="submit" name="button">Submit</button>
        </form>
        <a href="/posts"><button>Back</button></a>
      </div>
      <!-- main end-->

    </div>
    <% include ../partials/footer %>
  </body>
</html>
