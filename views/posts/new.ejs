<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
    <% include partials/top %>
<!-- main start-->

<!-- views/posts/index.ejs -->
<div class="new">
  <h3>New Post <small class="float_right">*Required</small></h3>
  <form class="checkValidation" action="/posts" method="post" id="checkValidation">
    <div class="inputs">
      <div class="floats">
        <label>Title*</label>
        <input class="cvRequired" type="text" name="post[title]" cvRqErrMsg="Title is required." cvRqErrTo="#cvErrTitle" value="">
        <div id="cvErrTitle" class="message"></div>
      </div>
      <div class="floats">
        <label>Author</label>
        <input disabled type="text" value="<%= user.nickname %>">
      </div>
      <div class="floats">
        <label>Body*</label>
        <textarea class="cvRequired" name="post[body]" cvRqErrMsg="Body is required." cvRqErrTo="#cvErrBody"></textarea>
        <div id="cvErrBody" class="message"></div>
      </div>
    </div>
  </form>
  <br>
  <div class="login" >
    <button type="submit" form="checkValidation">Create</button>
    <button onclick="location.href='/posts'" >Cancle</button>
  </div>

</div>

<!-- main end -->
    </div><!--posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
